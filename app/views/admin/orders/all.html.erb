<h1>All Orders History</h1>
<h3>All Orders: <%= @orders.count %></h3>
<div class="admin_status_links">
  <%= link_to "Completed Orders", admin_completed_path %>: <%= orders_count("completed") %> <br>
  <%= link_to "Paid Orders", admin_paid_path %>: <%= orders_count("paid") %> <br>
  <%= link_to "Ordered Orders", admin_ordered_path %>: <%= orders_count("ordered") %> <br>
  <%= link_to "Cancelled Orders", admin_cancelled_path %>: <%= orders_count("cancelled") %> <br> <br> <br>
</div>

<div class="orders_list">
  <% @orders.each do |order| %>
    <div id="order_<%=order.id%>">

      <%= link_to "Order ID: #{order.id}", order_path(order) %> <br>
      <% order.invoices.each do |invoice| %>
        Item: <%= invoice.item.title %> <br>
        Quantity: <%= invoice.quantity %> <br> <br>
      <% end %>
      Total Cost: <%= order.total_cost %> <br>
      Status: <%= order.status.capitalize %> <br>
      <%= edit_order_status(order) %>
      <%= cancel_button(order) %> <br> <br> <br>
    </div>
  <% end %>


</div>
